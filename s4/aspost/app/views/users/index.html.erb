<div class="container">
    <div class="row">
        <div class="col-md-12">
          <p id="notice"><%= notice %></p>
          <h1>Lista de usuarios</h1>
          <table class="table">
            <thead class="thead-light">
              <tr>
                <th scope="col">#</th>
                <th scope="col">Nombre</th>
                <th scope="col">Email</th>
                <th scope="col">Opciones</th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <th scope="row"><%= user.id %></th>
                  <td><%= user.name %></td>
                  <td><%= user.email %></td>
                  <td>
                    <%= link_to 'Mostrar', user, class: "badge badge-pill badge-light" %>
                    <%= link_to 'Editar', edit_user_path(user), class: "badge badge-pill badge-light" %>
                    <%= link_to 'Eliminar', user, method: :delete, data: { confirm: 'EstÃ¡s seguro?' }, class: "badge badge-pill badge-light" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <br>
          <%= link_to 'Nuevo usuario', new_user_path %>
        </div>
    </div>
</div>
